<com.ramotion.foldingcell.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/folding_cell_art"
    android:background="@drawable/winv"
    folding-cell:animationDuration="1300"
    folding-cell:cameraHeight="30"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_margin="5dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/cell_content_view"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cell_title_views"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:id="@+id/article_nos"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:id="@+id/fabric_types"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="2dp"
                        android:background="@color/white" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/composition_ts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/composition_t"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/composition_ss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/pattern_ts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pattern"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pattern_ss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/weaves"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weave"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/weave_ss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <TextView

                            android:id="@+id/note_ss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/note_article"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </GridLayout>
                </LinearLayout>

            </FrameLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/occasiion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/occassion_t"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/occasiion_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/occassion_t"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/occasiion"/>

            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/threadCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/occassion_t"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/threadCount_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/occassion_t"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/threadCount"/>

                </RelativeLayout>

            </GridLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            >

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/inMeter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/meter"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/inYard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/yard"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/fullRoll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:text="Full Roll"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/fullmeter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/fullyard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/above10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Above10"
                android:textColor="@color/orange_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/abovemeter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orange_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/aboveyard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orange_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/below10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:text="Below 10"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/belowmeter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/belowyard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>
        </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text="@string/edit"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@color/white"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/edit_article"
                    android:layout_weight="1"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text="@string/delete"
                    android:background="@android:color/holo_red_dark"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/delete_article"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cell_title_view"
        android:background="@color/white"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_article"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:id="@+id/article_no"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fabric_type_t"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/fabric_type"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:background="@color/white" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:columnCount="2">

                <TextView
                    android:id="@+id/composition_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/composition_t"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/composition_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/pattern_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pattern"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pattern_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/weave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weave"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weave_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/note_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/note_article"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                   />

                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                  />
            </GridLayout>

        </LinearLayout>

    </FrameLayout>
</com.ramotion.foldingcell.FoldingCell>
