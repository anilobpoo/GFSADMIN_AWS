<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <android.support.constraint.ConstraintLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content">        <TextView            android:id="@+id/packetTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Packet:"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="8dp"            android:text="809989-088-778"            app:layout_constraintStart_toEndOf="@+id/packetTitle"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/fabricTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Fabric"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/packetTitle" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="8dp"            android:text="809989-088-778"            app:layout_constraintStart_toEndOf="@+id/fabricTitle"            app:layout_constraintTop_toTopOf="@+id/fabricTitle"            android:textColor="@color/blue_100"/>    </android.support.constraint.ConstraintLayout></android.support.v7.widget.CardView>