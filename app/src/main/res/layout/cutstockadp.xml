<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fabric_master"
                android:id="@+id/fabimage_cs"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Fabname"
                    android:padding="2dp"
                    android:id="@+id/fabname_cs"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Fabname"
                    android:padding="2dp"
                    android:id="@+id/fabunicode_cs"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Fabname"
                    android:padding="2dp"
                    android:id="@+id/fabMtr_cs"
                    android:textColor="@color/brown_500"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created"
        android:gravity="right"
        android:id="@+id/created_cs"
        />
</LinearLayout>
        <View
            android:id="@+id/dashed1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dashed_line"
            />

        <GridLayout
            android:id="@+id/grid_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Warehouse" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Zone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Shelf" />

            <TextView
                android:id="@+id/war_cs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Vat"
                android:textColor="@color/red_500"
                />

            <TextView
                android:id="@+id/zone_cs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Vat"
                android:textColor="@color/green_500" />

            <TextView
                android:id="@+id/shelf_cs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Vat"
                android:textColor="@color/blue_500" />

        </GridLayout>

        <View
            android:id="@+id/dashed2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dashed_line"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay_forsoldFsbrics"
            android:visibility="gone">
            <TextView
                android:id="@+id/unique_sf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vat"
                android:padding="3dp"
                 />
            <TextView
                android:id="@+id/date_sf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vat"
                android:layout_below="@id/unique_sf"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>