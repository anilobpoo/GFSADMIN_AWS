<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obpoo.gfsfabricsoftware.Report.UI.PoDeliverydetItems">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OrderNo"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/orderno_item"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="MR"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:id="@+id/factory_i"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/factory"
            android:drawablePadding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="right"
            android:text="MR"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:id="@+id/date_item"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="3dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="MR"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:id="@+id/status_item"
            android:textColor="@color/orange_500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="MR"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:id="@+id/delivery_items"
            android:textColor="@color/colorPrimary"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_pickup_guy"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="MR"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:id="@+id/remaindelay_podi"/>

    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dashed_line"
        android:layout_margin="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MR"
        android:textSize="18sp"
        android:layout_margin="3dp"
        android:id="@+id/staff_podi"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_person_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MR"
        android:textSize="18sp"
        android:layout_margin="3dp"
        android:id="@+id/cc_podi"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="3dp"/>
</LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Items"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_podi"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

    </android.support.v7.widget.RecyclerView>


</LinearLayout>


</android.support.constraint.ConstraintLayout>
