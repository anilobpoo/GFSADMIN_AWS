<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        card_view:cardElevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipChildren="false"
        card_view:cardCornerRadius="3dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:elevation="5dp"
        tools:ignore="RtlCompat">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="armani_01"
                    android:id="@+id/unique_id"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <com.obpoo.gfsfabricsoftware.utilities.CustomProgress
                android:id="@+id/customProgressShowProgress"
                android:layout_below="@+id/customProgressText"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="ART NO"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="PP001"
                    android:id="@+id/article_no"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="MTRS# 41.09"
                    android:id="@+id/meters"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="YARD# 41.09"
                    android:textSize="20dp"
                    android:id="@+id/yards"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="COL# 34"
                    android:id="@+id/colors"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="PCSNO# 34345245"
                    android:textSize="20dp"
                    android:id="@+id/pcsno"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="BK#PPP001"
                    android:id="@+id/bkno"
                    android:textSize="13dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="CT/NO-"
                    android:textSize="13dp"
                    android:id="@+id/ctno"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="PO#17"
                    android:id="@+id/po"
                    android:textSize="13dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="#OF CARTON 45"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:id="@+id/noofcarton"
                    android:layout_height="wrap_content" />



            </LinearLayout>













        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>