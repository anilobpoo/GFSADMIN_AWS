<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/viewBg"    tools:context="com.obpoo.gfsfabricsoftware.TransferStock.Activity.WareHouseToWareHouse">    <LinearLayout        android:id="@+id/lay1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:weightSum="1">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight=".5"            android:orientation="vertical">            <TextView                android:id="@+id/sd"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Stock Document"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/tv_stock_doc"                android:layout_width="match_parent"                android:layout_height="30dp"                android:background="@drawable/rounded_edittx_bck"                app:layout_constraintEnd_toStartOf="@+id/divH"                app:layout_constraintHorizontal_weight=".5"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@+id/sd" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_margin="5dp"            android:layout_weight=".5"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Warehouse"                app:layout_constraintStart_toEndOf="@+id/divH"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/tv_warehouse"                android:layout_width="match_parent"                android:layout_height="30dp"                android:background="@drawable/rounded_edittx_bck"                app:layout_constraintEnd_toStartOf="@+id/divH"                app:layout_constraintHorizontal_weight=".5"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@+id/sd" />        </LinearLayout>    </LinearLayout>    <android.support.v7.widget.CardView        android:id="@+id/lay2"        android:layout_width="match_parent"        android:layout_height="30dp"        android:layout_below="@+id/lay1"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        app:cardBackgroundColor="@color/blue_100">        <TextView            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_marginLeft="8dp"            android:gravity="center"            android:text="Packets"            android:textColor="@color/white" />    </android.support.v7.widget.CardView>    <android.support.v7.widget.RecyclerView        android:id="@+id/recycler_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_above="@+id/conf"        android:layout_below="@+id/lay2">    </android.support.v7.widget.RecyclerView>    <android.support.v7.widget.CardView        android:id="@+id/conf"        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentBottom="true"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:layout_marginBottom="@dimen/padd_10"        app:cardBackgroundColor="@color/blue_100"        app:cardCornerRadius="4dp"        app:cardElevation="4dp">        <TextView            android:id="@+id/move"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:gravity="center"            android:text="Move Stock"            android:textColor="@color/white" />    </android.support.v7.widget.CardView></RelativeLayout>