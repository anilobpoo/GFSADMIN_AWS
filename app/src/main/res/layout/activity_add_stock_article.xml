<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obpoo.gfsfabricsoftware.Article.UI.AddStockArticle"
    tools:layout_editor_absoluteY="25dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/editaddgrnd">

    <include
        android:id="@+id/layout"
        layout="@layout/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/scroll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:text="@string/article_no_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/article_no_add"
                    
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="@string/note_article"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/note_add"

                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Fabric Type"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat"
                android:background="@drawable/winv"
                >


                <Spinner
                    android:id="@+id/ft_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Composition"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat"
                android:background="@drawable/winv">


                <Spinner
                    android:id="@+id/compassion_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/occassion_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/occassion_add"

                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/pricefullroll_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/fullYards_add"

                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="@string/price1to9_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/till9_yard_add"

                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/price10plus_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/above10_yd_add"

                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="@string/pricefullrollmtrs_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/fullmtrs_add"

                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/price1to9mtrs_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/till9_mtrs_add"

                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="@string/price10plusmtrs_t"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/above10_mtrs_add"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </android.support.v7.widget.CardView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addArticle"
                android:layout_margin="5dp"
                android:background="@drawable/button_bg_pink"
                android:textColor="@color/white"
                android:text="ADD ARTICLE"
                />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pbatshowArticle"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scroll"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>

