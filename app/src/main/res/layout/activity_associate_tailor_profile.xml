<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obpoo.gfsfabricsoftware.Associate_Tailor.UI.AssociateTailorProfile">
    <include
        android:id="@+id/include"
        layout="@layout/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:elevation="3dp"
        android:background="@drawable/winv"
       >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/tp_image"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Admin Email"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Email"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_email"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Admin Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_name"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Store Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_storename"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Store Email"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_storeemail"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Store Number"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_storenum"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_storeadd"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="City"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_storecity"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Country"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_country"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Factory Email"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_facEmail"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Currency"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_currency"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pincode"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tailor Name"
               android:textSize="13sp"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:id="@+id/tp_pincode"/>




        </GridLayout>
        </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
