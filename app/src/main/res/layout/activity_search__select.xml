<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="com.obpoo.gfsfabricsoftware.PurchaseOrder.UI.Search_Select">    <include        android:id="@+id/layout"        layout="@layout/layout_action_bar"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <LinearLayout        android:id="@+id/search_lay"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/layout"        android:background="@color/blue_100">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:background="@color/white">            <EditText                android:id="@+id/etSearch"                android:layout_width="120dp"                android:layout_height="wrap_content"                android:layout_alignParentStart="true"                android:layout_alignParentTop="true"                android:layout_margin="5dp"                android:layout_weight="1"                android:background="@drawable/invisibleborder"                android:fontFamily="@font/calibri"                android:hint="Search"                android:padding="7dp"                android:textColorHint="@color/gray"                tools:ignore="RtlCompat" />            <View                android:layout_width="1dp"                android:layout_height="fill_parent"                android:layout_margin="5dp"                android:background="@color/black" />            <ImageView                android:id="@+id/search"                android:layout_width="28dp"                android:layout_height="28dp"                android:layout_gravity="center"                android:background="@drawable/ic_search_black_36dp" />        </LinearLayout>    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/recycler_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/search_lay">    </android.support.v7.widget.RecyclerView></RelativeLayout>