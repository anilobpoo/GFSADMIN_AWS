<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="8dp"    app:cardCornerRadius="4dp"    app:cardElevation="4dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:weightSum="10">        <android.support.constraint.ConstraintLayout            android:layout_width="0dp"            android:layout_height="120dp"            android:layout_weight="2.8"            android:background="@color/blue_100">            <TextView                android:id="@+id/ordernum"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="3dp"                android:singleLine="true"                android:text="#112233"                android:textColor="@color/white"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintTop_toTopOf="parent">                <TextView                    android:id="@+id/mode"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="mode:"                    android:textColor="@color/white" />                <TextView                    android:id="@+id/type"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="type:"                    android:textColor="@color/white" />            </LinearLayout>            <TextView                android:id="@+id/items"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginBottom="3dp"                android:text="Items:"                android:textColor="@color/white"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent" />        </android.support.constraint.ConstraintLayout>        <android.support.constraint.ConstraintLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="7.2">            <ImageView                android:id="@+id/odat_img"                android:layout_width="18dp"                android:layout_height="18dp"                android:layout_marginLeft="8dp"                android:layout_marginTop="8dp"                android:src="@drawable/order_img"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/date"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:text="01-jun-2019"                android:textColor="@color/jet"                app:layout_constraintBottom_toBottomOf="@+id/odat_img"                app:layout_constraintStart_toEndOf="@+id/odat_img"                app:layout_constraintTop_toTopOf="@+id/odat_img" />            <ImageView                android:id="@+id/person_img"                android:layout_width="18dp"                android:layout_height="18dp"                android:layout_marginTop="8dp"                android:layout_marginBottom="8dp"                android:src="@drawable/ic_person_black_24dp"                app:layout_constraintBottom_toTopOf="@+id/div"                app:layout_constraintStart_toStartOf="@+id/odat_img"                app:layout_constraintTop_toBottomOf="@+id/odat_img" />            <TextView                android:id="@+id/customer_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:text="OBPOO ANDROID"                android:textColor="@color/black"                app:layout_constraintBottom_toBottomOf="@id/person_img"                app:layout_constraintStart_toEndOf="@+id/person_img"                app:layout_constraintTop_toTopOf="@+id/person_img" />            <ImageView                android:id="@+id/div"                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_margin="@dimen/padd_10"                android:src="@color/div"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <ImageView                android:id="@+id/go"                android:layout_width="22dp"                android:layout_height="22dp"                android:layout_marginEnd="@dimen/padd_10"                android:layout_marginBottom="5dp"                android:src="@drawable/chevron_right"                app:layout_constraintBottom_toTopOf="@+id/div"                app:layout_constraintEnd_toEndOf="parent" />            <android.support.v7.widget.CardView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginRight="10dp"                app:cardBackgroundColor="@color/orange_600"                app:cardCornerRadius="3dp"                app:layout_constraintBottom_toTopOf="@+id/go"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintTop_toTopOf="parent">                <TextView                    android:id="@+id/item_status"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:text="STATUS"                    android:textColor="@color/white" />            </android.support.v7.widget.CardView>            <LinearLayout                android:id="@+id/lay1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="3dp"                android:orientation="horizontal"                app:layout_constraintBottom_toTopOf="@+id/guid">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="center"                    android:text="ADVANCE" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="center"                    android:text="TOTAL" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="center"                    android:text="BALANCE" />            </LinearLayout>            <android.support.constraint.Guideline                android:id="@+id/guid"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="horizontal"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintGuide_percent="0.75" />            <LinearLayout                android:id="@+id/lay2"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal"                android:layout_marginTop="3dp"                app:layout_constraintTop_toBottomOf="@+id/guid">                <TextView                    android:id="@+id/advance"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="center"                    android:text="ADVANCE"                    android:textColor="@color/blue_100" />                <TextView                    android:id="@+id/total"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="center"                    android:text="TOTAL" />                <TextView                    android:id="@+id/leftover"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="center"                    android:text="BALANCE"                    android:textColor="@color/red_100" />            </LinearLayout>        </android.support.constraint.ConstraintLayout>    </LinearLayout></android.support.v7.widget.CardView>