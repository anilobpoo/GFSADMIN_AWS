<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context="com.obpoo.gfsfabricsoftware.AssignDeliveries.UI.AssignDelivery_Act">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/layout"
            layout="@layout/layout_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/searchfab"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="7dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/calibri"
                        android:id="@+id/etSearch"
                        android:background="@drawable/invisibleborder"
                        android:hint="Search"
                        android:textColorHint="@color/gray"

                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="7dp"
                        tools:ignore="RtlCompat" />

                    <View
                        android:layout_width="1dp"
                        android:layout_margin="5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/search"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_search_black_36dp"
                        />





                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view_ad"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
