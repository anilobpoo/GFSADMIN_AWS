<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".vendors.ui.AddVendor">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout"
            layout="@layout/layout_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:text="Customer Name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/fullName"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Customer Type"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/type"
                        android:layout_width="299dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:background="@drawable/winv"
                        android:padding="@dimen/padd_10" />

                    <ImageView
                        android:id="@+id/options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_36dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Shop"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/shop"
                        android:layout_width="299dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:background="@drawable/winv"
                        android:padding="@dimen/padd_10" />

                    <ImageView
                        android:id="@+id/shopOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_36dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>





            <TextView
                android:layout_width="match_parent"
                android:text="Email"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email"
                    android:minLines="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Password"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="299dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:background="@drawable/winv"
                        android:padding="@dimen/padd_10" />

                    <ImageView
                        android:id="@+id/showPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_visibility_black_24dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="VAT"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/vat"
                    android:minLines="1"
                    android:inputType="number"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Group"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/group"
                        android:layout_width="299dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:background="@drawable/winv"
                        android:padding="@dimen/padd_10" />

                    <ImageView
                        android:id="@+id/groupOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_36dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Telephone"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/telephone"
                    android:minLines="1"
                    android:inputType="number"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="Fax"
                android:textColor="@color/white"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/fax"
                    android:inputType="number"
                    android:minLines="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>




            <TextView
                android:layout_width="match_parent"
                android:text="Address"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/address"
                    android:inputType="textPostalAddress"
                    android:minLines="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Country"
                android:textColor="@color/white"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/country"
                    android:minLines="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:text="ZipCode"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                card_view:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:elevation="5dp"
                tools:ignore="RtlCompat">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/winv"
                    android:padding="@dimen/padd_10"
                    android:id="@+id/zipcode"
                    android:minLines="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:layout_margin="5dp"
                android:background="@drawable/button_bg_pink"
                android:textColor="@color/white"
                android:text="Add Customer" />



        </LinearLayout>




    </LinearLayout>



</ScrollView>