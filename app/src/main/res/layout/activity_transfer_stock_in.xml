<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obpoo.gfsfabricsoftware.TransferStock.Activity.TransferStockIn"
    android:orientation="vertical">
    <include
        android:id="@+id/action_layout"
        layout="@layout/layout_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select WareHouse"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="5dp"
        android:visibility="gone">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ware_spin"
            android:padding="5dp">

        </Spinner>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/invisibleborder"
                android:fontFamily="@font/calibri"
                android:hint="Search Warehouse"
                android:padding="7dp"
                android:textColorHint="@color/gray"
                tools:ignore="RtlCompat" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_search_black_36dp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="Scan Shelf"
               android:layout_weight="1"
               android:id="@+id/scanshelf"
               android:textSize="18sp"
               android:textColor="@color/colorPrimary"
               android:gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/scanClick"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_qr_blue" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="3dp"
        android:visibility="gone"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shelve Detail"
            android:layout_weight="1"
            android:id="@+id/scanshelfdetail"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="left"
            android:padding="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"

        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="Shop:"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Shop:"
                android:textColor="@color/orange_500"
                android:id="@+id/shopname"
                android:paddingLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="Shop:"
                android:textColor="@color/orange_500"
                android:id="@+id/shopno"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_columnSpan="2"
                android:layout_margin="2dp"
                android:background="@color/grey_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="Warehouse:"
                android:paddingLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Shop:"
                android:textColor="@color/colorPrimary"
                android:id="@+id/warename"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="Shop:"
                android:textColor="@color/colorPrimary"
                android:id="@+id/wareno"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_columnSpan="2"
                android:background="@color/grey_500"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="Zone:"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Zone:"
                android:textColor="@color/red_500"
                android:id="@+id/zonename"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="Shop:"
                android:textColor="@color/red_500"
                android:id="@+id/zoneno"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_columnSpan="2"
                android:background="@color/grey_500"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="Shelve:"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Shop:"
                android:textColor="@color/green_500"
                android:id="@+id/shelvename"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="Shop:"
                android:textColor="@color/green_500"
                android:id="@+id/shelveno"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_columnSpan="2"
                android:background="@color/grey_500"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Want to select diffrent shelve? "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="click to scan "
                android:textColor="@color/blue_500"
                android:layout_marginLeft="5dp"
                />
        </GridLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="3dp"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Packet Detail"
                android:layout_weight="1"
                android:id="@+id/packetdetail"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="left"
                android:padding="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ts_fab_in"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:visibility="gone"/>

    <Button
        android:id="@+id/submit_moveIn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_bg"
        android:text="Move Out"
        android:textColor="@color/white"
        android:visibility="gone"

        />

</LinearLayout>
