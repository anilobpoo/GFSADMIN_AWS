<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/folding_cell_dsr"
    android:background="@drawable/winv"
    folding-cell:animationDuration="1300"
    folding-cell:cameraHeight="30"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_margin="5dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/poleft_below_view"
        android:padding="10dp"
        android:visibility="gone"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="left"
                    android:textColor="@color/black"
                    android:id="@+id/invoice_po_left_below"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:id="@+id/date_po_left_below"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_500"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="left"
                    android:textColor="@color/blue_500"
                    android:id="@+id/order_po_left_below"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="center"
                    android:id="@+id/bundle_po_left_below"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="left"
                    android:textColor="@color/brown_500"
                    android:id="@+id/article_po_left_below"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="center"
                    android:id="@+id/color_po_left_below"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="left"
                    android:layout_columnSpan="2"
                    android:id="@+id/baikon_po_left_below"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="left"
                    android:layout_columnSpan="2"
                    android:id="@+id/carton_po_left_below"
                    android:layout_marginBottom="10dp"/>

            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dashed_line"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"/>
            <GridLayout
                android:id="@+id/grid_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Total" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Paid" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="LeftOver" />

                <TextView
                    android:id="@+id/total_po_left_below"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Vat"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/paid_po_left_below"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Vat"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/left_po_left_below"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Vat"
                    android:textColor="@color/brown_500"
                    android:textSize="18sp"/>

            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dashed_line"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"

                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/type_po_left_below"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Term: "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/term_po_left_below"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:id="@+id/due_po_left_below"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_gravity="right"
                    android:id="@+id/delivery_po_left_below"
                    />
            </GridLayout>

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/poleft_above_view"
        android:padding="5dp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:id="@+id/invoice_po_left_above"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:id="@+id/date_po_left_above"
            android:layout_marginRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_500"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"/>
        </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leftover"
                        android:id="@+id/left_po_left_above_text"
                        android:layout_centerHorizontal="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invoice"
                        android:id="@+id/left_po_left_above"
                        android:layout_below="@+id/left_po_left_above_text"
                        android:layout_centerHorizontal="true"
                        android:textSize="15sp"
                        android:textColor="@color/brown_500"

                        />
                </RelativeLayout>
               <View
                   android:layout_width="2dp"
                   android:layout_height="50dp"
                   android:background="@color/colorPrimary"
                   android:layout_margin="10dp"/>
                <GridLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:columnCount="2"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baikon No:"
                        android:textColor="@color/grey_500"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invoice"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/baikon_po_left_above"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cartons"
                        android:textColor="@color/grey_500"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invoice"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cartons_po_left_above"
                        android:textColor="@color/brown_500"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textColor="@color/grey_500"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invoice"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/delivery_po_left_above"
                        android:textColor="@color/black"

                        />


                </GridLayout>



            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</com.ramotion.foldingcell.FoldingCell>