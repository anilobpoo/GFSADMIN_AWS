<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popupPlace"
    android:background="@drawable/invisibleborder"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/winv"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:columnCount="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:text="Tailor Name"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/t_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:text="Tailor Email"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:text="Tailor Email"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/t_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:text="Tailor Name"
                android:textSize="13sp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:text="Activity"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/t_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:text="Tailor Name"
                android:textSize="13sp" />

            <Button
                android:id="@+id/t_profile"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/green_500"
                android:padding="2dp"
                android:text="Tailor PRofile"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/t_status"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/blue_500"
                android:padding="2dp"
                android:text="status change"
                android:textColor="@color/white"
                android:textSize="13sp" />


        </GridLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>