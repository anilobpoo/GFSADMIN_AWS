<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginTop="8dp"    android:layout_marginBottom="8dp">    <android.support.constraint.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <ImageView            android:id="@+id/bord"            android:layout_width="5dp"            android:layout_height="match_parent"            android:src="@color/green_500"            app:layout_constraintTop_toTopOf="@+id/item_id"            app:layout_constraintBottom_toBottomOf="@+id/cost_mtr"            app:layout_constraintStart_toStartOf="parent"/>        <ImageView            android:id="@+id/item_img"            android:layout_width="75dp"            android:layout_height="70dp"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            app:layout_constraintStart_toEndOf="@+id/bord"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/item_id"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:text="item no 0000"            android:textColor="@color/black"            android:textSize="15dp"            app:layout_constraintBottom_toTopOf="@+id/brand"            app:layout_constraintStart_toEndOf="@+id/item_img"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/brand"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:text="Brand Name"            app:layout_constraintBottom_toTopOf="@+id/shipcode"            app:layout_constraintStart_toEndOf="@+id/item_img"            app:layout_constraintTop_toBottomOf="@+id/item_id" />        <TextView            android:id="@+id/brand_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:layout_constraintTop_toTopOf="@+id/brand"            app:layout_constraintBottom_toBottomOf="@+id/brand"            app:layout_constraintStart_toEndOf="@+id/brand"            android:layout_marginLeft="@dimen/padd_10"            android:text="N/A"            android:textColor="@color/black"/>        <TextView            android:id="@+id/shipcode"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:text="Ship Code:"            app:layout_constraintStart_toEndOf="@+id/item_img"            app:layout_constraintTop_toBottomOf="@+id/brand"            app:layout_constraintBottom_toBottomOf="@+id/item_img"/>        <TextView            android:id="@+id/shipcode_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:layout_constraintTop_toTopOf="@+id/shipcode"            app:layout_constraintBottom_toBottomOf="@+id/shipcode"            app:layout_constraintStart_toStartOf="@+id/brand_tv"            android:text="N/A"            android:textColor="@color/black"/>        <android.support.v7.widget.CardView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/padd_10"            android:layout_marginRight="10dp"            app:cardBackgroundColor="@color/orange_100"            app:cardCornerRadius="4dp"            app:layout_constraintBottom_toBottomOf="@+id/item_id"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="@+id/item_id">            <TextView                android:id="@+id/item_status"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:text="STATUS"                android:textColor="@color/white"                android:textSize="14dp" />        </android.support.v7.widget.CardView>        <TextView            android:id="@+id/qnty"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/padd_10"            android:layout_marginBottom="5dp"            android:layout_marginTop="8dp"            android:text="QNTYT METTER"            android:textColor="@color/pinktext"            app:layout_constraintStart_toStartOf="@+id/item_img"            app:layout_constraintTop_toBottomOf="@+id/item_img" />        <TextView            android:id="@+id/rqstd_qnty"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:text="RQSTD.QNTY"            android:textColor="@color/pinktext"            app:layout_constraintBottom_toBottomOf="@+id/qnty"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/qnty"            app:layout_constraintTop_toTopOf="@+id/qnty" />        <TextView            android:id="@+id/cost_mtr"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginBottom="5dp"            android:layout_marginTop="5dp"            android:text="QNTYT METTER"            android:textColor="@color/black"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="@+id/qnty"            app:layout_constraintTop_toBottomOf="@+id/qnty" />        <TextView            android:id="@+id/cost_yrd"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginBottom="5dp"            android:text="RQSTD.QNTY"            android:textColor="@color/black"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/qnty" />    </android.support.constraint.ConstraintLayout></android.support.v7.widget.CardView>